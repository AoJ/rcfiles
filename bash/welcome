date

if [ -x /usr/bin/keychain ]; then
    keychain ~/.ssh/id_rsa
    . ~/.keychain/$HOSTNAME-sh
fi

async_check_rcfiles() {
  {
    sleep 3
    local RCFILES_UPDATED=$(echo $(cd ~/dev/rcfiles && git ls-remote origin && git ls-remote .) | tr ' ' '\n' | sed 's/[a-zA-Z/]*//' | sed '/^$/d' | uniq | wc -l | awk '{print ($1==1)}')
    if [[ $RCFILES_UPDATED == 0 ]]
      then echo -e "\r\rRCFILES repo is not up-to date.\r\r"
    fi
  }&
}

async_check_rcfiles
disown
